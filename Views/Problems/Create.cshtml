@{
    var sliderTitles = new List<string>
    {
        "Title 1", "Title 2", "Title 3", "Title 4", "Title 5",
        "Title 6", "Title 7", "Title 8", "Title 9", "Title 10",
        "Title 11", "Title 12", "Title 13", "Title 14", "Title 15",
        "Title 16", "Title 17", "Title 18"
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sliders</title>
    <style>
        .slider-container {
            margin-bottom: 20px;
        }

        .slider-title {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .slider {
            width: 100%;
        }

        .slider-labels {
            display: flex;
            justify-content: space-between;
            margin-top: 5px;
        }

        .submit-button {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <form method="post" action="/Problems/SubmitRatings" onsubmit="serializeSliders()">
        <div id="sliders">
            @for (int i = 0; i < sliderTitles.Count; i++)
            {
                <div class="slider-container">
                    <div class="slider-title">@sliderTitles[i]</div>
                    <input type="range" min="1" max="5" value="3" class="slider" id="slider@(i + 1)" name="slider@(i + 1)">
                    <div class="slider-labels">
                        <span>Horrible</span>
                        <span>Lacking</span>
                        <span>Alright</span>
                        <span>Good</span>
                        <span>Perfect</span>
                    </div>
                </div>
            }
        </div>
        <input type="hidden" id="sliderValues" name="sliderValues" />
        <button type="submit" class="submit-button">Submit</button>
    </form>

    <script>
        function serializeSliders() {
            var sliderValues = [];
            for (var i = 1; i <= 18; i++) {
                var slider = document.getElementById("slider" + i);
                if (slider) {
                    sliderValues.push(slider.value);
                }
            }
            document.getElementById("sliderValues").value = sliderValues.join(',');
        }
    </script>
</body>
</html>
